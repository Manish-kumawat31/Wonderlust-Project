<% layout('/layouts/boilerplate') -%>

  <div class="row">
    <div class="col-6 offset-3">
      <div class="mt-3 col-6 offset-4">
        <img src="<%= originalUrl %>">
      </div>
      <form action="/listings/<%= list1._id %>?_method=PUT" method="post" class="needs-validation" novalidate
        enctype="multipart/form-data">
        <!-- <h3 class="mt-3">Edit Your Details</h3> -->
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" class="form-control" name="title" value="<%= list1.title %>" required>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <input type="text" class="form-control" name="description" value="<%= list1.description %>" required>
        </div>
        
        <div class="mb-3">
          <label for="image" class="form-label">Upload new Image</label>
          <input type="file" class="form-control" name="image">
        </div>
        <div class="row">
          <div class="mb-3 col-lg-4">
            <label for="price" class="form-label">Price</label>
            <input type="number" class="form-control" name="price" value="<%= list1.price %>" required>
          </div>
          <div class="mb-3 col-lg-8">
            <label for="country" class="form-label">Country</label>
            <input type="text" class="form-control" name="country" value="<%= list1.country %>" required>
          </div>
        </div>
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input type="text" class="form-control" name="location" value="<%= list1.location %>" required>
        </div>
        <button type="submit" class="btn btn-primary mb-3">Submit</button>
      </form>
    </div>
  </div>