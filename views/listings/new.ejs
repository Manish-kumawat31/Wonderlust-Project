<% layout('/layouts/boilerplate') -%>
  <div class="row">
    <div class="col-6 offset-3">
      <form action="/listings" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
        <h3 class="mt-3">Enter Details</h3>
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" class="form-control" name="title" placeholder="Enter title" required>
          <div class="invalid-feedback">Please Enter valid Title.</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <input type="text" class="form-control" name="description" placeholder="Enter Description" required>
          <div class="invalid-feedback">Please Enter valid Description.</div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">upload Image</label>
          <input type="file" class="form-control" name="image" placeholder="Enter image-URL">
        </div>
        <div class="row">
          <div class="mb-3 col-lg-4">
            <label for="price" class="form-label">Price</label>
            <input type="number" class="form-control" name="price" placeholder="Enter Price" required>
            <div class="invalid-feedback">Please Enter valid Price.</div>
          </div>
          <div class="mb-3 col-lg-8">
            <label for="country" class="form-label">Country</label>
            <input type="text" class="form-control" name="country" placeholder="Enter Country" required>
            <div class="invalid-feedback">Please Enter valid Country.</div>
          </div>
        </div>
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input type="text" class="form-control" name="location" placeholder="Enter location" required>
          <div class="invalid-feedback">Please Enter valid Location.</div>
        </div>
        <button type="submit" class="btn btn-primary mb-3">Submit</button>
      </form>
    </div>
  </div>